<Application x:Class="Hearts.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Hearts"
             StartupUri="Views/LobbyView.xaml">
    <Application.Resources>
        <BitmapImage x:Key="table" UriSource="/Resources/Table_BG.png"></BitmapImage>
        <local:ViewModelLocator x:Key="viewModelLocator"></local:ViewModelLocator>
        <Style x:Key="headerStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Margin" Value="5, 1, 0, 1"></Setter>
            <Setter Property="FontFamily" Value="CourierNew"></Setter>
            <Setter Property="Background" Value="LightGray"></Setter>
        </Style>
    </Application.Resources>
</Application>
